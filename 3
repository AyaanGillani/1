<h1 id="dynamicHeading"></h1>
<a id="dynamicLink" href="" style="font-size:24px"></a>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var keywords = [
      "marshmallow","screwdriver","volcano","trapezoid","saxophone",
      "pancake","astronaut","jellyfish","blender","hammock"
    ];
    var urls = [
      "https://www.spacelint.org",
      "https://www.purplekoala.biz",
      "https://www.butterpickle.net",
      "https://www.fishumbrella.com",
      "https://www.cactuswiggle.tv",
      "https://www.neonbanjo.dev",
      "https://www.toothcloud.co",
      "https://www.plasticnoodle.art",
      "https://www.lizardopera.xyz",
      "https://www.fungusbubble.io"
    ];

    // pick random keyword & URL
    var keyword = keywords[Math.floor(Math.random() * keywords.length)];
    var url = urls[Math.floor(Math.random() * urls.length)];

    // set heading
    document.getElementById("dynamicHeading").textContent = keyword;

    // set anchor
    var link = document.getElementById("dynamicLink");
    link.textContent = keyword;
    link.href = url;
  });
</script>
